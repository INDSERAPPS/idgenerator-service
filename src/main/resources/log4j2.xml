<?xml version="1.0" encoding="UTF-8"?>
<Configuration >


<Appenders>
<RollingFile name="file-log" fileName="${sys:idgenerator}\idgenerator-info.log"
filePattern="${sys:idgenerator}\idgenerator-info-%d{yyyy-MM-dd}.log">
<PatternLayout>
<pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
</PatternLayout>
<Policies>
<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
</Policies>
</RollingFile>

